{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Device",
  "description": "Device configuration structure",
  "type": "object",
  "required": ["capabilities", "commands", "model", "protocol"],
  "properties": {
    "capabilities": {
      "$ref": "#/definitions/DeviceCapabilities"
    },
    "commands": {
      "$ref": "#/definitions/DeviceCommands"
    },
    "model": {
      "type": "string"
    },
    "protocol": {
      "type": "string"
    }
  },
  "definitions": {
    "DeviceCapabilities": {
      "description": "Device capabilities configuration",
      "type": "object",
      "properties": {
        "brightness": {
          "type": ["boolean", "null"]
        },
        "color": {
          "type": ["boolean", "null"]
        },
        "color_temperature": {
          "type": ["boolean", "null"]
        },
        "power": {
          "type": ["boolean", "null"]
        }
      }
    },
    "DeviceCommands": {
      "description": "Device command configuration",
      "type": "object"
    }
  }
}
