{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "type": "object",
  "required": ["discovery", "logging", "system"],
  "properties": {
    "discovery": {
      "$ref": "#/definitions/Discovery"
    },
    "logging": {
      "$ref": "#/definitions/Logging"
    },
    "system": {
      "$ref": "#/definitions/System"
    }
  },
  "definitions": {
    "Discovery": {
      "type": "object",
      "properties": {
        "protocols": {
          "type": ["array", "null"],
          "items": {
            "$ref": "#/definitions/Protocol"
          }
        }
      }
    },
    "LogLevel": {
      "type": "string",
      "enum": ["TRACE", "DEBUG", "INFO", "WARN", "ERROR"]
    },
    "Logging": {
      "type": "object",
      "properties": {
        "level": {
          "anyOf": [
            {
              "$ref": "#/definitions/LogLevel"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "Protocol": {
      "type": "object"
    },
    "ProtocolConfig": {
      "type": "object",
      "required": [
        "discovery_interval",
        "discovery_retries",
        "discovery_retry_delay",
        "discovery_timeout",
        "enabled"
      ],
      "properties": {
        "discovery_interval": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "discovery_retries": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        },
        "discovery_retry_delay": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "discovery_timeout": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "System": {
      "description": "Main configuration structure for the Cove system",
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    }
  }
}
