{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "type": "object",
  "required": [
    "discovery",
    "logging",
    "system"
  ],
  "properties": {
    "discovery": {
      "$ref": "#/definitions/Discovery"
    },
    "logging": {
      "$ref": "#/definitions/Logging"
    },
    "system": {
      "$ref": "#/definitions/SystemConfig"
    }
  },
  "definitions": {
    "Discovery": {
      "type": "object",
      "properties": {
        "protocols": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/Protocol"
          }
        }
      }
    },
    "LogLevel": {
      "type": "string",
      "enum": [
        "TRACE",
        "DEBUG",
        "INFO",
        "WARN",
        "ERROR"
      ]
    },
    "Logging": {
      "type": "object",
      "properties": {
        "level": {
          "anyOf": [
            {
              "$ref": "#/definitions/LogLevel"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "Protocol": {
      "type": "object"
    },
    "ProtocolConfig": {
      "type": "object",
      "required": [
        "discovery_interval",
        "discovery_retries",
        "discovery_retry_delay",
        "discovery_timeout",
        "enabled"
      ],
      "properties": {
        "discovery_interval": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "discovery_retries": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        },
        "discovery_retry_delay": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "discovery_timeout": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "ServiceAdvertisementConfig": {
      "type": "object",
      "required": [
        "enabled",
        "service_type"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "service_type": {
          "type": "string"
        },
        "txt_records": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "SystemConfig": {
      "type": "object",
      "required": [
        "host",
        "name",
        "port"
      ],
      "properties": {
        "host": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "format": "uint16",
          "minimum": 0.0
        },
        "service_advertisement": {
          "anyOf": [
            {
              "$ref": "#/definitions/ServiceAdvertisementConfig"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    }
  }
}