{
  "bin": {
    "cove-hub-v2": "./cove-hub-v2"
  },
  "dependencies": {
    "@2colors/esphome-native-api": "^1.3.4",
    "@cove/db": "workspace:*",
    "@cove/id": "workspace:*",
    "@cove/logger": "workspace:*",
    "@cove/protocols": "workspace:*",
    "@cove/types": "workspace:*",
    "@t3-oss/env-core": "catalog:",
    "bonjour-service": "1.3.0",
    "drizzle-orm": "catalog:",
    "esphome-client": "^1.1.2",
    "zod": "catalog:"
  },
  "description": "Cove Hub V2 - Core daemon for home automation",
  "devDependencies": {
    "@cove/tsconfig": "workspace:*",
    "@types/bun": "catalog:",
    "drizzle-kit": "catalog:",
    "typescript": "catalog:"
  },
  "license": "MIT",
  "main": "./src/index.ts",
  "name": "@cove/hub-v2",
  "private": false,
  "scripts": {
    "build": "bun build ./src/index.ts --compile --outfile cove-hub-v2",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "test": "bun test src/__tests__",
    "test:coverage": "bun test --coverage src/__tests__",
    "test:watch": "bun test --watch src/__tests__",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "type": "module",
  "version": "0.1.0"
}
