{
  "catalog": {
    "@clerk/nextjs": "6.33.5",
    "@supabase/supabase-js": "2.75.0",
    "@t3-oss/env-core": "0.13.8",
    "@t3-oss/env-nextjs": "0.13.8",
    "@tanstack/react-query": "5.90.3",
    "@trpc/client": "11.6.0",
    "@trpc/react-query": "11.6.0",
    "@trpc/server": "11.6.0",
    "@types/bun": "1.3.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "date-fns": "4.1.0",
    "drizzle-orm": "0.44.6",
    "drizzle-zod": "0.8.3",
    "next": "15.5.5",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "stripe": "19.1.0",
    "superjson": "2.2.2",
    "tailwindcss": "4.1.14",
    "typescript": "5.9.3",
    "zod": "4.1.12",
    "zustand": "5.0.8"
  },
  "commitlint": {
    "extends": [
      "@cove/commitlint-config"
    ]
  },
  "description": "Cove - Self-hosted home automation platform combining simplicity with extensibility",
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@commitlint/cli": "20.1.0",
    "@cove/commitlint-config": "workspace:*",
    "@testing-library/react": "16.3.0",
    "@turbo/gen": "2.5.8",
    "@types/bun": "1.3.0",
    "bun": "1.3.0",
    "checkly": "6.8.0",
    "knip": "5.65.0",
    "lefthook": "1.13.6",
    "turbo": "2.5.8",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "keywords": [
    "home-automation",
    "iot",
    "smart-home",
    "esphome",
    "matter",
    "zigbee",
    "raspberry-pi"
  ],
  "name": "@cove/root",
  "overrides": {
    "@types/vscode": "1.96.0"
  },
  "packageManager": "bun@1.3.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:hub": "turbo run build --filter=@cove/hub",
    "bump-versions": "changeset version && bun install",
    "clean": "git clean -xdf node_modules .turbo",
    "clean:ws": "turbo run clean",
    "db:gen-migration": "turbo -F @cove/db gen-migration",
    "db:migrate": "turbo -F @cove/db migrate",
    "db:push": "turbo -F @cove/db push",
    "db:seed": "turbo -F @cove/db seed",
    "db:studio": "turbo -F @cove/db studio",
    "dev": "turbo watch dev",
    "dev:hub": "turbo watch dev -F @cove/hub",
    "dev:next": "turbo watch dev -F @cove/web-app...",
    "format": "biome check",
    "format:ci": "biome ci",
    "format:fix": "biome check --write",
    "knip": "knip --include files,dependencies",
    "lint:ws": "bunx sherif@latest",
    "postinstall": "bun lint:ws",
    "publish": "turbo run build --filter=./packages/hub... && changeset publish",
    "test": "bun test",
    "test:integ": "turbo run test --filter=@cove/integ-test",
    "test:integ:ci": "turbo run test:ci --filter=@cove/integ-test",
    "test:integ:watch": "turbo run test:watch --filter=@cove/integ-test",
    "typecheck": "turbo run typecheck",
    "typecheck:ci": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "version": "changeset version && bun biome check --write",
    "with-env": "infisical run --"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@clerk/shared",
    "@scarf/scarf",
    "@sentry/cli",
    "@tailwindcss/oxide",
    "@vercel/speed-insights",
    "browser-tabs-lock",
    "bufferutil",
    "bun",
    "core-js",
    "electron",
    "esbuild",
    "keytar",
    "lefthook",
    "puppeteer",
    "sharp",
    "supabase",
    "yarn"
  ],
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*",
      "tooling/*"
    ]
  }
}