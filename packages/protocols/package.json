{
  "dependencies": {
    "@cove/logger": "workspace:*",
    "@cove/types": "workspace:*"
  },
  "description": "Protocol implementations for Cove home automation platform",
  "devDependencies": {
    "@cove/tsconfig": "workspace:*",
    "typescript": "5.9.3"
  },
  "exports": {
    ".": "./src/index.ts",
    "./esphome": "./src/esphome/index.ts",
    "./esphome/native": "./src/esphome/native/index.ts",
    "./esphome/sse": "./src/esphome/sse.ts",
    "./homekit": "./src/homekit/index.ts",
    "./hue": "./src/hue/index.ts",
    "./matter": "./src/matter/index.ts",
    "./mqtt": "./src/mqtt/index.ts",
    "./zigbee": "./src/zigbee/index.ts",
    "./zwave": "./src/zwave/index.ts"
  },
  "license": "MIT",
  "name": "@cove/protocols",
  "private": true,
  "scripts": {
    "clean": "git clean -xdf .turbo node_modules dist",
    "create:protocol": "bun run scripts/create-protocol.ts",
    "test": "bun test tests/",
    "test:hue": "bun test tests/hue/*.test.ts --exclude tests/hue/integration.test.ts",
    "test:hue:integration": "RUN_HUE_INTEGRATION_TESTS=true bun test tests/hue/integration.test.ts",
    "test:watch": "bun test tests/ --watch",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "verify:hue": "bun run scripts/test-hue-bridge.ts"
  },
  "type": "module",
  "version": "0.1.0"
}
